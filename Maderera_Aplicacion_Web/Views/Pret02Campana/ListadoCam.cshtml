@model IEnumerable<Maderera_Aplicacion_Web.Models.Pret02Campana>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
            <div class="mt-3">
                <h1>Lista de Campañas</h1>
            </div>
            <div class="d-flex flex-row mt-3">
                <div class="nav-item " style="margin-right: 10px;">
                    <a class="btn btn-success btn-sm" asp-controller="Pret02Campana" asp-action="Campana" asp-route-id="@ViewBag.idPredio">Crear</a>
                </div>
                <div class="nav-item r ">
                    <a style="color:white;" class="btn btn-danger btn-sm" id="cancelarListCamp">Salir</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div style="align-items:center;justify-content:center;text-align:center;margin-right:60px;margin-left:50px; margin-top:20px;">
    <div class="table-responsive-sm">

        <div class="align-content-center">
            <table class="display" id="campanatabla" style="border: 1px solid black; ">
                <thead style="font-size:16px;text-align:center;">
                    <tr class="table-primary">
                        <th class="text-center">
                            Tipo Campaña
                        </th>
                        <th class="text-center">
                            Código Campaña
                        </th>
                        <th class="text-center">
                            Area
                        </th>
                        <th class="text-center">
                            Nro. Hectareas
                        </th>
                        <th class="text-center">
                            Nro. Árboles
                        </th>
                        <th class="text-center">
                            Coordenadas
                        </th>
                        <th class="text-center">
                            Fecha Inicio
                        </th>
                        <th class="text-center">
                            Fecha Final
                        </th>
                        <th class="text-center">
                            Distrito
                        </th>
                        <th class="text-center">
                            Unidad Catastral
                        </th>
                       
                        <th class="text-center">
                            Opciones
                        </th>
                    </tr>
                </thead>
                <tbody style="font-size:16px;">
                    @foreach (var item in ViewBag.ListadoPredio)
                    {
                        <tr>
                            <td class="text-center">
                                @item.IdTipoCampanaNavigation.TxtDesc
                            </td>
                            <td class="text-center">
                                @item.CodigoCampana
                            </td>
                            <td class="text-center">
                                @item.Area
                            </td>
                            <td class="text-center">
                                @item.NroHectarea
                            </td>
                            <td class="text-center">
                                @item.NroArboles
                            </td>
                            <td class="text-center">
                                @item.Coordenadas
                            </td>
                            <td class="text-center">
                                @item.FechaInicio.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center">
                                <p>@((item.FechaFina != null) ? item.FechaFina.ToString() : "En proceso")</p>
                            </td>
                            <td class="text-center">
                                @item.IdDistritoNavigation.TxtDesc
                            </td>
                            <td class="text-center">
                                @item.IdPredioNavigation.UnidadCatastral
                            </td>
                           
                            <td>
                                <a asp-controller="Pret02Campana" asp-action="EditarTA" asp-route-idcampana="@item.IdCampana" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit" data-placement="top" title="Edit"></i>
                                </a> |

                                <a asp-controller="Pret02Campana" asp-action="Details" asp-route-id="@item.IdCampana" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye" data-placement="top" title="Details"></i>
                                </a> |


                                <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirmarEliminarPredio" data-id="@item.IdCampana">
                                    <i class="fas fa-trash alt"></i>
                                </a> @*|ID:@item.IdPredio*@

                                <!-- Modal de advertencia -->
                                <div class="modal" id="confirmarEliminarModal" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Advertencia</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                ¿Está seguro de que desea eliminar este elemento?
                                            </div>
                                            <div class="modal-footer">
                                                <!-- Botón de cancelar -->
                                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                                                <!-- Botón de confirmar eliminación -->

                                                <a asp-controller="Pret02Campana" asp-action="Delete" asp-route-id="@item.IdCampana" class="btn btn-danger btn-sm">
                                                   Eliminar
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {
        var table = jQuery('#campanatabla').DataTable(

            {
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Campañas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Campañas",
                    "infoFiltered": "(Filtrado de _MAX_ total Campañas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Campañas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            }
        
        
        );

    });
</script>