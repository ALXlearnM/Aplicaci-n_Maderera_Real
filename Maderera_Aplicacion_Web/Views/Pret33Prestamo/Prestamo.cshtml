                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label col-form-label-sm text-nowrap" style="font-size:16px;"> Plazo* :</label>
                                <div class="col-sm-7 ml-5">
                                        <input asp-for="Plazo" type="number" id="plazo" required class="form-control form-control-sm mx-sm-3 mb-2 p-0" oninput="calcularcuota()" />

                                </div>

                            </div>

                            <div class="form-group row">
                                    <label class="col-sm-2 col-form-label col-form-label-sm text-nowrap" style="font-size:16px;"> Monto Cuota($)* :</label>
                                <div class="col-sm-7 ml-5">
                                        <input asp-for="MontoCuota" type="number" id="montocuota" required class="form-control form-control-sm mx-sm-3 mb-2 p-0" readonly />


