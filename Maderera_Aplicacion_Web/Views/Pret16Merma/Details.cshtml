@model Maderera_Aplicacion_Web.Models.Pret16Merma

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-6">
            <h2>Detalles de Merma</h2>
        </div>
        <div class="col-sm-6 text-right">
            <a class="btn btn-danger" asp-action="ListadoMer">Listado</a>
        </div>
    </div>

    <hr class="text-decoration-line-through" />

    <div class="row mt-5">
        <div class="col-md-5">
            <dl class="row">
                <div class="col-sm-10">
                    <dt>
                        Fecha de Merma:
                    </dt>
                    <dd>
                        @if (Model.FechaMerma != null)
                        {
                            <input type="text" value="@Model.FechaMerma" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-10">
                    <dt>
                        Estado:
                    </dt>
                    <dd>
                        @if (Model.TxtEstado != null)
                        {
                            <input type="text" value="@Model.TxtEstado" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>

                <div class="col-sm-10">
                    <dt>
                        Tipo Merma:
                    </dt>
                    <dd>
                        @if (Model.TipoMerma != null)
                        {
                            <input type="text" value="@Model.TipoMerma" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
            </dl>
        </div>
        <div class="col-md-5">
            <dl class="row">
                <div class="col-sm-10">
                    <dt>
                        Producción:
                    </dt>
                    <dd>
                        @if (Model.IdProduccionNavigation != null && Model.IdProduccionNavigation.IdProduccion != null)
                        {
                            <input type="text" value="@Model.IdProduccionNavigation.IdProduccion" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-10">
                    <dt>
                        Comentario:
                    </dt>
                    <dd>
                        @if (Model.Comentario != null)
                        {
                            <input type="text" value="@Model.Comentario" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-10">
                    <dt>
                        Predio:
                    </dt>
                    <dd>
                        @if (Model.IdPredio != null)
                        {
                            <input type="text" value="@Model.IdPredio" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
            </dl>
        </div>
    </div>
   
</div>
