@model Maderera_Aplicacion_Web.Models.Pret11Recepcion
<title>@ViewData["Title"] Jhyperionm</title>
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-6">
            <h2>Detalles de Recepción</h2>
        </div>
        <div class="col-sm-6 text-right">
            <a class="btn btn-danger" asp-action="ListadoRec">Volver al Listado</a>
        </div>
    </div>

    <hr class="text-decoration-line-through" />

    <div class="row mt-4">
        <div class="col-md-4">
            <dl class="row">
                <div class="col-sm-12">
                    <dt>
                        Recepción Cantidad:
                    </dt>
                    <dd>
                        @if (Model.RecepcionCant != null)
                        {
                            <input type="text" value="@Model.RecepcionCant" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-12">
                    <dt>
                        Fecha de Recepción:
                    </dt>
                    <dd>
                        @if (Model.FechaRecepcion != null)
                        {
                            <input type="text" value="@Model.FechaRecepcion" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-12">
                    <dt>
                        Estado:
                    </dt>
                    <dd>
                        @if (Model.TxtEstado != null)
                        {
                            <input type="text" value="@Model.TxtEstado" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
            </dl>
        </div>
        <div class="col-md-4">
            <dl class="row">
                <div class="col-sm-12">
                    <dt>
                        Usuario:
                    </dt>
                    <dd>
                        @if (Model.TxtUsuario != null)
                        {
                            <input type="text" value="@Model.TxtUsuario" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-12">
                    <dt>
                        Usuario Modificador:
                    </dt>
                    <dd>
                        @if (Model.TxtUsuarioModificador != null)
                        {
                            <input type="text" value="@Model.TxtUsuarioModificador" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
                <div class="col-sm-12">
                    <dt>
                        Fecha de Modificación:
                    </dt>
                    <dd>
                        @if (Model.FechaModificacion != null)
                        {
                            <input type="text" value="@Model.FechaModificacion" disabled />
                        }
                        else
                        {
                            <input type="text" value="No tiene" disabled />
                        }
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</div>
