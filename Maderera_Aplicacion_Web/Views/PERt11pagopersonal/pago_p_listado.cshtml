<div style="align-items:center;justify-content:center;text-align:center;margin-right:60px;margin-left:50px; margin-top:20px;">

    

        
            <table class="display" id="tablapago" >
                <thead style="font-size:14px;">
                    <tr class="table-primary">
                        <th>Fecha</th>
                        <th>Campaña</th>
                        <th>Usuario</th>
                        <th>Concepto</th>
                        <th>Predio</th>
                        <th>Estado</th>
                        <th>Salida</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody style="font-size:20px;">
                    @foreach (var comprobante in ViewBag.Comprobantes)
                    {
                        <tr class="table-light">
                            <td>@comprobante.fecha.ToString("MM-dd-yyyy")</td>
                            <td>@comprobante.campana</td>
                            <td>@comprobante.usuario</td>
                            <td>@comprobante.concepto</td>
                            <td>@comprobante.predio</td>
                            <td>@comprobante.estado</td>
                            <td>@comprobante.salida</td>

                            <td>
                                @* Suponiendo que tienes una lista de comprobantes y estás iterando sobre ellos usando un foreach *@

                                 <a id="editarComprobante" asp-controller="Pert11PagoPersonal" asp-action="Editar" asp-route-id="@comprobante.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>

                                @*<a asp-controller="Tnst04CompEmitido" asp-action="Details" asp-route-id="@comprobante.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a> *@

                                <a id="editarComprobante" asp-controller="Pert11PagoPersonal" asp-action="Eliminar" asp-route-id="@comprobante.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash alt"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
    
    
</div>


